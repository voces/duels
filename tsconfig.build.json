{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": [
      "lua-types/5.3",
      "war3-types-strict/1.32.10"
    ]
  },
  "include": ["./src"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "**/tests/**"],
  "tstl": {
    "noImplicitSelf": true,
    "luaBundleEntry": "./src/main.ts",
    "luaBundle": "out.lua",
    "luaTarget": "5.3"
  }
}
